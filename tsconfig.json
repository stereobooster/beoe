{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext", "DOM"],
    "rootDir": ".",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "types": ["node"],
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "noEmit": true,
    "preserveValueImports": false,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "**/*.mjs", "eslint.config.js"],
  "exclude": [
    "**/vendor/**",
    "**/node_modules/**",
    "**/dist/**",
    "**/fixtures/**"
  ]
}
